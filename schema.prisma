datasource db {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  name      String   @unique
  salt      String   @unique
  password  String

  friendships Friendship[]
  friends     Friend[]
  writtenMessages  Message[]    @relation("WrittenMessages")
  receivedMessages Message[]    @relation("ReceivedMessages")
}

model Friend {
  id       Int  @id @default(autoincrement())
  friendId Int
  friend   User @relation(fields: [friendId], references: [id])

  friendshipId Int
  friendship   Friendship @relation(fields: [friendshipId], references: [id], onDelete: Cascade)
}

model Friendship {
  id Int @id @default(autoincrement())

  peer Friend[]

  requesterId Int
  requester   User @relation(fields: [requesterId], references: [id])

  pending Boolean
  conversation Conversation?
}

model Conversation {
  id           Int        @id @default(autoincrement())
  friendship   Friendship @relation(fields: [friendshipId], references: [id])
  friendshipId Int        @unique

  messages Message[]
}

model Message {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  text      String

  conversation   Conversation @relation(fields: [conversationId], references: [id])
  conversationId Int

  senderId   Int
  sender     User @relation("WrittenMessages", fields: [senderId], references: [id])
  receiverId Int
  receiver   User @relation("ReceivedMessages", fields: [receiverId], references: [id])
}
